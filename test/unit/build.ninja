cflags = -I. -I/usr/include/libctf/
ldflags = -lbsdctf

rule compile
 command = clang $cflags -c $in -o $out

rule link
 command = clang -o $out $in $ldflags

build run: link obj/run.o obj/sc_type.o obj/sc_kind.o
build obj/run.o: compile src/run.c

build obj/sc_type.o: compile string_conversion/type.c
build obj/sc_kind.o: compile string_conversion/kind.c

